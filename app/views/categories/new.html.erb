<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-8">
        <%= simple_form_for @category do |f| %>
          <%= f.input :name, collection: Category::CATEGORIES, hint: "Please select a category" %>
          <%= f.input :description, input_html: {maxlength: 100}, hint: "Add any important information"  %>
          <%= f.input :price, input_html: { min: 100 }, hint: "State your rental price per hour"  %>
          <%= f.input :photo, as: :file  %>
          <%= f.submit "Create", class: 'btn btn-primary' %>
        <% end %>
    </div>
  </div>
</div>
