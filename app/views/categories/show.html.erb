<div class="container-show">
  <div class="container-show-photo">
    <% if @category.photo.attached? %>
      <%= cl_image_tag @category.photo.key, class: "photo-cat-show", height: 200, width: 200, crop: :fill  %>
    <% else %>
      <%= cl_image_tag "FEM2REZBr1aMmq8BWdXwvdat", class: "photo-cat-show", height: 200, width: 200, crop: :fill %>
    <% end %>
      <div class="container-show-data">
        <h1>Information</h1>
        <h2><%= @category.user.first_name %></h2>
        <p><%= @category.user.age %></p>
        <p><%= @category.user.personality%></p>
      </div>
  </div>
    <div class="container-ca-show-map-info">
      <div
        id="map"
        style="width: 100%;
        height: 350px;"
