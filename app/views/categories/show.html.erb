      <div class="container-show-data">
        <h1>Description</h1>
        <h2><%= @category.name  %></h2>
        <p><%= @category.description %></p>
        <p><%= @category.price %> å††</p>
      </div>
      <div class="container-cat-show-button">
        <%= link_to new_category_booking_path(@category), class: "button-cat-show-rent" do %>
          <span>Rent now!</span>
        <% end %>
      </div>
  </div>


</div>


